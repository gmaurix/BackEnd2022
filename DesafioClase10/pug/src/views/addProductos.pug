doctype html
html(lang='en')
	head
		meta(charset="UTF-8")
		meta(content="text/html" X-Content-Type-Options="nosniff" http-equiv="Content-Type")
		link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
		title='Agregar Productos'
	body
		.container
			h1(class="ml-5")='Agregar Productos'
			form(action="/api/productos", method="post" class="form d-flex mt-2 text-center ml-5"  )
				.form-group
					input(type="text", class="form-control col-auto mt-2" name="title" id="title" placeholder="title" required)
					input(type="number",class="form-control col-auto mt-2" name="price" id="price" placeholder="price" required)
					input(type="text", class="form-control col-auto mt-2" name='thumbnail' id="thumbnail" placeholder="thumbnail" required)
					input(type="submit" class="btn btn-primary m-2", value="Agregar" onclick=alert='jj')
					a(href="/api/productos/listar" class="btn btn-primary ml-3") Listar