
doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
		title Listado de Productos
	body
	.container
		h1='Listado de Productos'
		table(class='table table-striped  table-sm rounded-2 responsive justify-center mt-5') 
			th='Titulo'
			th='Precio'
			th='Foto'
			each producto in data
				tr(class='table-striped')
					td=producto.title 
					td=producto.price 
					td 
						img(with='50px' height='50px' src=producto.thumbnail, alt="im")
		a(href="/" class="btn btn-primary ml-3") Agregar Productos
		